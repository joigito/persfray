<p id="notice"><%= notice %></p>

<h1>Assistances</h1>

<table>
  <thead>
    <tr>
      <th>Personal</th>
      <th>Fecha desde</th>
      <th>Fecha hasta</th>
      <th>Motivo</th>
      <th>Con aviso</th>
      <th>Justificado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assistances.each do |assistance| %>
      <tr>
        <td><%= assistance.personal_id %></td>
        <td><%= assistance.fecha_desde %></td>
        <td><%= assistance.fecha_hasta %></td>
        <td><%= assistance.movito %></td>
        <td><%= assistance.con_aviso %></td>
        <td><%= assistance.justificado %></td>
        <td><%= link_to 'Show', assistance %></td>
        <td><%= link_to 'Edit', edit_assistance_path(assistance) %></td>
        <td><%= link_to 'Destroy', assistance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

