<%= form_with(model: personal, local: true) do |form| %>
  <% if personal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(personal.errors.count, "error") %> prohibited this personal from being saved:</h2>

      <ul>
        <% personal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :documento, 'Documento' %>
    <%= form.text_field :documento %>
  </div>

  <div class="field">
    <%= form.label :apeynom, 'Apellido y nombres' %>
    <%= form.text_field :apeynom %>
  </div>

  <div class="field">
    <%= form.label :fecnac, 'Fecha de nacimiento' %>
    <%= form.date_select :fecnac, start_year: Date.today.year - 70, end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= form.label :fecing, 'Fecha de ingreso' %>
    <%= form.date_select :fecing, start_year: Date.today.year - 45, end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= form.label :domic, 'Domicilio' %>
    <%= form.text_field :domic %>
  </div>

  <div class="field">
    <%= form.label :activo, 'Activo' %>
    <%= form.check_box :activo %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
