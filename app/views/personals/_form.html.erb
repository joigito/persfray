

<%= simple_form_for(@personal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :documento, label:'Documento' %>
    <%= f.input :apeynom, label:'Apellido y nombres' %>
    <%= f.input :fecnac, label:'Fecha de nacimiento',
    start_year: Date.today.year - 70, end_year: Date.today.year %>
    <%= f.input :fecing, label:'Fecha de ingreso', start_year: Date.today.year - 40,
     end_year: Date.today.year %>
    <%= f.input :domic, label:'Domicilio' %>
    <%= f.input :activo, label:'Activo', as: :radio_buttons %>

  </div>

  <div class="form-actions">
    <%= f.button :submit,label:'Enviar' %>
  </div>
<% end %>
