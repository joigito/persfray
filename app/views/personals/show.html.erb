<p id="notice"><%= notice %></p>

<p>
  <strong>Documento:</strong>
  <%= @personal.documento %>

  <strong>Apellido y nombres:</strong>
  <%= @personal.apeynom %>
</p>

<p>
  <strong>Fecha de nacimiento:</strong>
  <%= @personal.fecnac %>

  <strong>Fecha de ingreso:</strong>
  <%= @personal.fecing %>
</p>

<p>
  <strong>Domicilio:</strong>
  <%= @personal.domic %>

  <strong>Activo:</strong>
  <%= @personal.activo %>
</p>

<h4>Licencias del agente</h4>
<table>
  <thead>
    <tr>
      <th>Personal</th>
      <th>Fecha desde</th>
      <th>Fecha hasta</th>
      <th>Motivo</th>
      <th>Con aviso</th>
      <th>Justificado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personal.movimientos.each do |movimiento| %>
      <tr>
        <td><%= movimiento.fecha_desde %></td>
        <td><%= movimiento.fecha_hasta %></td>
        <td><%= movimiento.motivo %></td>
        <td><%= movimiento.con_aviso %></td>
        <td><%= movimiento.justificado %></td>
        <td><%= link_to 'Mostrar', movimiento %></td>
        <td><%= link_to 'Editar', edit_movimiento_path(movimiento) %></td>
        <td><%= link_to 'Eliminar', movimiento, method: :delete, data: { confirm: 'Confirma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Editar', edit_personal_path(@personal) %> |
<%= link_to 'Volver', personals_path %>
