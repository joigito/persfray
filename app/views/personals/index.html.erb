<p id="notice"><%= notice %></p>

<h1>Personal</h1>
<%= form_tag(personals_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "BÃºsqueda de agente" %>
<%= submit_tag "Search" %>
<% end %>
<% if @personals.present? %>
  <%= render @personals %>
<% else %>
  <p>Agente no encontrado <%= params[:search] %>.</p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Documento</th>
      <th> Apellido y Nombres </th>
      <th> Fecha de Nacimiento </th>
      <th> Fecha de Ingreso </th>
      <th> Domicilio </th>
      <th> Activo </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.documento %></td>
        <td><%= personal.apeynom %></td>
        <td><%= personal.fecnac %></td>
        <td><%= personal.fecing %></td>
        <td><%= personal.domic %></td>
        <td><%= personal.activo %></td>
        <td><%= link_to 'Mostrar', personal %>|</td>
        <td><%= link_to 'Editar', edit_personal_path(personal) %>|</td>
        <td><%= link_to 'Eliminar', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

