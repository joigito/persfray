<h1>Personal</h1>

<table>
  <thead>
    <tr>
      <th>Documento</th>
      <th>Apellido y Nombres</th>
      <th>Fecha de Nacimiento</th>
      <th>Fecha de Ingreso</th>
      <th>Domicilio</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.documento %></td>
        <td><%= personal.apeynom %></td>
        <td><%= personal.fecnac %></td>
        <td><%= personal.fecing %></td>
        <td><%= personal.domic %></td>
        <td><%= personal.activo %></td>
        <td><%= link_to 'Show', personal %></td>
        <td><%= link_to 'Edit', edit_personal_path(personal) %></td>
        <td><%= link_to 'Destroy', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

